<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
  xsi:type="MailApp">

  <!-- Identity -->
  <Id>3b2e0b2b-7a29-4c7e-9f7a-4b9b0c6c4d21</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Mark Robinson</ProviderName>
  <DefaultLocale>en-AU</DefaultLocale>

  <!-- Strings -->
  <DisplayName DefaultValue="HashFix On-Send"/>
  <Description DefaultValue="Runs policy checks and formatting fixes when you press Send."/>

  <!-- Icons -->
  <IconUrl DefaultValue="https://David-Summers.github.io/hashfix/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://David-Summers.github.io/hashfix/icon-64.png"/>

  <!-- Support (must appear before Permissions in this schema) -->
  <SupportUrl DefaultValue="https://David-Summers.github.io/hashfix/support.html"/>

  <!-- AppDomains, Hosts, Requirements must precede Permissions -->
  <AppDomains>
    <AppDomain>https://David-Summers.github.io</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <!-- Legacy FormSettings (kept minimal for broader client compatibility) -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://David-Summers.github.io/hashfix/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- Permissions AFTER Requirements -->
  <Permissions>ReadWriteMailbox</Permissions>

  <!-- Root contextual rule -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>

  <DisableEntityHighlighting>true</DisableEntityHighlighting>

  <!-- Outer 1.0 VersionOverrides wrapper -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">

    <!-- Inner 1.1 VersionOverrides for commands/events -->
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">

      <Description resid="App.Description" />

      <!-- Requirement set for OnMessageSend -->
      <Requirements>
        <bt:Sets DefaultMinVersion="1.10">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>

      <Hosts>
        <Host xsi:type="MailHost">
          <DesktopFormFactor>

            <!-- FunctionFile is allowed at this level -->
            <FunctionFile resid="Functions.Url"/>

            <!-- Ribbon button for message compose -->
            <ExtensionPoint xsi:type="MessageComposeCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgComposeGroup">
                  <Label resid="GroupLabel"/>
                  <Control xsi:type="Button" id="msgComposeOpenPaneButton">
                    <Label resid="ButtonLabel"/>
                    <Supertip>
                      <Title resid="SupertipTitle"/>
                      <Description resid="SupertipDescription"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon16"/>
                      <bt:Image size="32" resid="Icon32"/>
                      <bt:Image size="80" resid="Icon80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="Taskpane.Url"/>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>

            <!-- Ribbon button for message read -->
            <ExtensionPoint xsi:type="MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgReadGroup">
                  <Label resid="GroupLabel"/>
                  <Control xsi:type="Button" id="msgReadOpenPaneButton">
                    <Label resid="ButtonLabel"/>
                    <Supertip>
                      <Title resid="SupertipTitle"/>
                      <Description resid="SupertipDescription"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon16"/>
                      <bt:Image size="32" resid="Icon32"/>
                      <bt:Image size="80" resid="Icon80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="Taskpane.Url"/>
                    </Action>
                  </Control>
                </Group>
              </OfficeTab>
            </ExtensionPoint>

            <!-- OnSend event handler -->
            <ExtensionPoint xsi:type="LaunchEvent">
              <LaunchEvents>
                <LaunchEvent Type="OnMessageSend" FunctionName="onMessageSendHandler" SendMode="SoftBlock"/>
              </LaunchEvents>
              <SourceLocation resid="Functions.Url"/>
            </ExtensionPoint>

          </DesktopFormFactor>
        </Host>
      </Hosts>

      <!-- Resources -->
      <Resources>
        <bt:Images>
          <bt:Image id="Icon16" DefaultValue="https://David-Summers.github.io/hashfix/icon-16.png"/>
          <bt:Image id="Icon32" DefaultValue="https://David-Summers.github.io/hashfix/icon-32.png"/>
          <bt:Image id="Icon64" DefaultValue="https://David-Summers.github.io/hashfix/icon-64.png"/>
          <bt:Image id="Icon80" DefaultValue="https://David-Summers.github.io/hashfix/icon-80.png"/>
        </bt:Images>

        <bt:Urls>
          <bt:Url id="Taskpane.Url"  DefaultValue="https://David-Summers.github.io/hashfix/taskpane.html"/>
          <bt:Url id="Functions.Url" DefaultValue="https://David-Summers.github.io/hashfix/functions.html"/>
          <bt:Url id="Support.Url"   DefaultValue="https://David-Summers.github.io/hashfix/support.html"/>
        </bt:Urls>

        <bt:ShortStrings>
          <bt:String id="GroupLabel"          DefaultValue="HashFix"/>
          <bt:String id="ButtonLabel"         DefaultValue="Open HashFix"/>
          <bt:String id="SupertipTitle"       DefaultValue="HashFix"/>
          <bt:String id="App.Description"     DefaultValue="Automatic hashtag formatting"/>
        </bt:ShortStrings>

        <bt:LongStrings>
          <bt:String id="SupertipDescription" DefaultValue="Opens the HashFix taskpane to view automatic hashtag formatting activity and statistics for your emails."/>
        </bt:LongStrings>
      </Resources>
    </VersionOverrides>
  </VersionOverrides>
</OfficeApp>
