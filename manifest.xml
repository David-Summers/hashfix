<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xsi:type="MailApp">

  <Id>3b2e0b2b-7a29-4c7e-9f7a-4b9b0c6c4d21</Id>
  <Version>2.1.0.0</Version>
  <ProviderName>Mark Robinson</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="HashFix"/>
  <Description DefaultValue="Automatically converts # to superscript in Data#3 when sending emails"/>

  <!-- Azure Storage Static Website -->
  <IconUrl DefaultValue="https://hashfixaddin.z20.web.core.windows.net/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://hashfixaddin.z20.web.core.windows.net/icon-64.png"/>
  <SupportUrl DefaultValue="https://hashfixaddin.z20.web.core.windows.net/support.html"/>

  <AppDomains>
    <AppDomain>hashfixaddin.z20.web.core.windows.net</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <Permissions>ReadWriteMailbox</Permissions>

  <!-- IMPORTANT: include Compose because we use OnMessageSend -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Compose"/>
  </Rule>

  <!-- Single VersionOverrides V1_1 -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
                    xsi:type="VersionOverridesV1_1">

    <Requirements>
      <bt:Sets DefaultMinVersion="1.10">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>

    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>

          <!-- Ribbon command in compose -->
          <ExtensionPoint xsi:type="MessageComposeCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgComposeGroup">
                <Label resid="groupLabel"/>
                <Control xsi:type="Button" id="msgComposeOpenPaneButton">
                  <Label resid="taskpaneButtonLabel"/>
                  <Supertip>
                    <Title resid="taskpaneButtonLabel"/>
                    <Description resid="taskpaneButtonTooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="icon16"/>
                    <bt:Image size="32" resid="icon32"/>
                    <bt:Image size="80" resid="icon80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>MsgCompose</TaskpaneId>
                    <SourceLocation resid="taskpaneUrl"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>

            <!-- Launch events -->
            <LaunchEvents>
              <LaunchEvent Type="OnMessageSend"
                           FunctionName="onMessageSendHandler"
                           SendMode="SoftBlock"/>
            </LaunchEvents>

            <!-- Function file that loads Office.js and associates the handler -->
            <SourceLocation resid="funcFile"/>
          </ExtensionPoint>

        </DesktopFormFactor>
      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="icon16" DefaultValue="https://hashfixaddin.z20.web.core.windows.net/icon-16.png"/>
        <bt:Image id="icon32" DefaultValue="https://hashfixaddin.z20.web.core.windows.net/icon-32.png"/>
        <bt:Image id="icon64" DefaultValue="https://hashfixaddin.z20.web.core.windows.net/icon-64.png"/>
        <bt:Image id="icon80" DefaultValue="https://hashfixaddin.z20.web.core.windows.net/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <!-- functions.html embeds the event handler code -->
        <bt:Url id="funcFile" DefaultValue="https://hashfixaddin.z20.web.core.windows.net/functions.html"/>
        <bt:Url id="taskpaneUrl" DefaultValue="https://hashfixaddin.z20.web.core.windows.net/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="groupLabel" DefaultValue="HashFix"/>
        <bt:String id="taskpaneButtonLabel" DefaultValue="HashFix"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="taskpaneButtonTooltip" DefaultValue="Fix hashtag formatting in your emails"/>
      </bt:LongStrings>
    </Resources>

  </VersionOverrides>
</OfficeApp>
