<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xsi:type="MailApp">

  <!-- Unique ID -->
  <Id>8c1a0b2e-0dc2-4c7e-8427-02dfe3a831d7</Id>
  <Version>1.0.0.3</Version>
  <ProviderName>Data#3</ProviderName>
  <DefaultLocale>en-AU</DefaultLocale>
  <DisplayName DefaultValue="HashFix on Send"/>
  <Description DefaultValue="Superscripts '#' immediately before '3' in the email body; existing &lt;sup&gt; entries are left unchanged."/>

  <!-- Icons -->
  <IconUrl DefaultValue="https://markarobinson-pixel.github.io/hashfix/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://markarobinson-pixel.github.io/hashfix/icon-32.png"/>
  <SupportUrl DefaultValue="https://markarobinson-pixel.github.io/hashfix/"/>

  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>

  <!-- Declare external domains used by the add-in -->
  <AppDomains>
    <AppDomain>https://markarobinson-pixel.github.io</AppDomain>
  </AppDomains>

  <!-- Requirement set for on-send -->
  <Requirements>
    <Sets DefaultMinVersion="1.10">
      <Set Name="Mailbox"/>
    </Sets>
  </Requirements>

  <Permissions>ReadWriteItem</Permissions>

  <!-- Classic FormSettings with SourceLocation (some validators require this) -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://markarobinson-pixel.github.io/hashfix/functions.html"/>
      </DesktopSettings>
    </Form>
    <Form xsi:type="ItemEdit">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://markarobinson-pixel.github.io/hashfix/functions.html"/>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- A simple always-on rule for messages -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Edit"/>
  </Rule>

  <!-- Modern on-send event wiring -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.10">
        <bt:Set Name="Mailbox"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailHost">
        <Runtimes>
          <Runtime resid="Functions.Url" lifetime="long"/>
        </Runtimes>
        <DesktopFormFactor>
          <FunctionFile resid="Functions.Url"/>
          <ExtensionPoint xsi:type="Events">
            <Event Type="ItemSend" FunctionExecution="synchronous" FunctionName="onMessageSend"/>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Urls>
        <bt:Url id="Functions.Url" DefaultValue="https://markarobinson-pixel.github.io/hashfix/functions.html"/>
      </bt:Urls>
      <bt:Images>
        <bt:Image id="Icon16" DefaultValue="https://markarobinson-pixel.github.io/hashfix/icon-16.png"/>
        <bt:Image id="Icon32" DefaultValue="https://markarobinson-pixel.github.io/hashfix/icon-32.png"/>
      </bt:Images>
      <bt:ShortStrings>
        <bt:String id="residDisplayName" DefaultValue="HashFix on Send"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="residDescription" DefaultValue="Superscripts '#' immediately before '3' on send."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
