<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ov="http://schemas.microsoft.com/office/mailappversionoverrides/1.1"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xsi:type="MailApp">

  <!-- Identity -->
  <Id>3b2e0b2b-7a29-4c7e-9f7a-4b9b0c6c4d21</Id> <!-- NEW GUID for fresh install -->
  <Version>1.0.0.0</Version>
  <ProviderName>Mark Robinson</ProviderName>
  <DefaultLocale>en-AU</DefaultLocale>

  <!-- Strings -->
  <DisplayName DefaultValue="HashFix On-Send Add-in"/>
  <Description DefaultValue="Runs policy checks and formatting fixes when you press Send." />

  <!-- Icons (32 & 64 only) -->
  <IconUrl DefaultValue="https://markarobinson-pixel.github.io/hashfix/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://markarobinson-pixel.github.io/hashfix/icon-64.png"/>

  <!-- Permissions required for OnMessageSend -->
  <Permissions>ReadWriteMailbox</Permissions>
  <SupportsPinning>false</SupportsPinning>

  <!-- Requirements -->
  <Requirements>
    <Sets DefaultMinVersion="1.10">
      <Set Name="Mailbox" MinVersion="1.10"/>
    </Sets>
  </Requirements>

  <!-- Allow resources from your GitHub Pages origin -->
  <AppDomains>
    <AppDomain>https://markarobinson-pixel.github.io</AppDomain>
  </AppDomains>

  <!-- Event-based add-in config -->
  <VersionOverrides xsi:type="ov:VersionOverridesV1_1">
    <Hosts>
      <Host xsi:type="ov:Mailbox">

        <!-- Use your existing functions.html as the runtime page -->
        <Runtimes>
          <Runtime resid="Functions.Url" lifetime="long"/>
        </Runtimes>

        <ExtensionPoints>
          <!-- On Send handler -->
          <ExtensionPoint xsi:type="ov:LaunchEvent">
            <LaunchEvents>
              <LaunchEvent Type="OnMessageSend" FunctionName="onMessageSendHandler"/>
            </LaunchEvents>
            <SourceLocation resid="Functions.Url"/>
          </ExtensionPoint>
        </ExtensionPoints>

      </Host>
    </Hosts>

    <Resources>
      <bt:Images>
        <bt:Image id="Icon32" DefaultValue="https://markarobinson-pixel.github.io/hashfix/icon-32.png"/>
        <bt:Image id="Icon64" DefaultValue="https://markarobinson-pixel.github.io/hashfix/icon-64.png"/>
      </bt:Images>

      <bt:Urls>
        <!-- Point directly to your existing file -->
        <bt:Url id="Functions.Url" DefaultValue="https://markarobinson-pixel.github.io/hashfix/functions.html"/>
        <!-- Optional links (create later if you want) -->
        <bt:Url id="Support.Url"  DefaultValue="https://markarobinson-pixel.github.io/hashfix/support.html"/>
        <bt:Url id="Privacy.Url"  DefaultValue="https://markarobinson-pixel.github.io/hashfix/privacy.html"/>
        <bt:Url id="Terms.Url"    DefaultValue="https://markarobinson-pixel.github.io/hashfix/terms.html"/>
      </bt:Urls>

      <bt:ShortStrings>
        <bt:String id="App.DisplayName" DefaultValue="HashFix On-Send"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="App.Description" DefaultValue="Runs policy checks and formatting fixes when you press Send."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
